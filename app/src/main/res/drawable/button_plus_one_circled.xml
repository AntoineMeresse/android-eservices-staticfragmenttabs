<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <selector android:exitFadeDuration="@android:integer/config_mediumAnimTime">
            <item android:state_pressed="true">
                <shape
                    android:shape="oval" >
                    <stroke android:width="5dp" android:color="@color/colorPrimaryDark"  />
                    <solid android:color="@android:color/transparent" />
                    <padding android:bottom="24dp" android:top="24dp" android:left="20dp" android:right="28dp"/>
                </shape>
            </item>
            <item>
                <shape
                    android:shape="oval" >
                    <stroke android:width="5dp" android:color="@color/colorPrimary" />
                    <solid android:color="@android:color/transparent" />
                    <padding android:bottom="24dp" android:top="24dp" android:left="20dp" android:right="28dp"/>
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <inset>
            <selector android:exitFadeDuration="@android:integer/config_mediumAnimTime">
                <item android:drawable="@drawable/ic_plus_one_pressed" android:state_pressed="true" />
                <item android:drawable="@drawable/ic_plus_one" />
            </selector>
        </inset>
    </item>
</layer-list>